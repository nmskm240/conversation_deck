@startuml Conversation deck cards
class TalkCard
{
    -_title:String
    -_talkDetail:TalkDetail
    -_useCount:int
    +<<property>>title:String{get only}
    +use():void
    +delete():void
}
class TalkDetail
{
    -_when:DateTime
    -_where:String
    -_who:String
    -_what:String
    -_why:String
    -_how:String
    -_other:String
    +<<property>>when:DateTime
    +<<property>>where:String
    +<<property>>who:String
    +<<property>>what:String
    +<<property>>why:String
    +<<property>>how:String
    +<<property>>other:String
}
abstract CardHolder
{
    +cards:List
}
class Deck
{
    -_name:String
    +<<property>>name:String
    +draw(count:int):List<TalkCard>
    +shuffle():void
    +delete():void
}

TalkCard *--> TalkDetail
CardHolder *-- TalkCard
Deck --|> CardHolder

@enduml